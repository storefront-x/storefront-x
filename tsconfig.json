{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {
      "@storefront-x/*": ["./modules/*"],
      "#ioc/*": ["./.sfx/ioc/*"],
      "~/*": ["./*"]
    },
    "types": ["node", "cypress", "vitest/globals"]
  },
  "include": ["modules/**/*", "local_modules/**/*", "cypress/**/*", ".sfx/**/*"],
  "exclude": [".sfx/vite"]
}
